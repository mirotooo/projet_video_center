{% extends 'base.html.twig' %}

{% block title %}Create Video
{% endblock %}

{% block body %}
	<div class="blank-xl"></div>
	<div class="container-xs center">
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		{{ form_start(createForm) }}
		<h2 class="">Create Video</h2>
		<div class="blank"></div>
		<div class="form-group">
			{{ form_row(createForm.title, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		<div class="form-group">
			{{ form_row(createForm.videoLink, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		<div class="form-group">
			{{ form_row(createForm.description, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		<div class="form-check">
			{{ form_row(createForm.premiumVideo, {attr: {class: 'form-check-input'}}) }}
		</div>
		<div class="blank"></div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block">Create Video</button>
		</div>
		{{ form_row(createForm._token) }}
		{{ form_end(createForm, {
			
		}) }}
	</div>
{% endblock %}

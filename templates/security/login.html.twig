{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block body %}
	<div class="blank-xl"></div>
	<div class="container-xxs center">
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form action="{{ path('app_login') }}" method="post">
			<h2 class="text-center">Log in</h2>
			<div class="blank"></div>
			<div class="form-group">
				<input type="text" class="form-control" id="username" name="_username" placeholder="Username" value="{{ last_username }}" required="required">
			</div>
			<div class="blank-sm"></div>
			<div class="form-group">
				<input type="password" class="form-control" id="password" name="_password" placeholder="Password" required="required">
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="blank"></div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">Log in</button>
			</div>
			<div class="blank"></div>
			<div class="clearfix">
				<a href="#" class="float-right">Forgot password?</a>
				<div class="blank-xl"></div>
				Not registered yet ?
				<a href="/register" class="float-right">Create an account</a>
			</div>
		</form>
	</div>
{% endblock %}

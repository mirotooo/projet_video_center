{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="blank-xl"></div>
	<div class="container-xxs center">
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		{{ form_start(registrationForm) }}
		<h2 class="">Register</h2>
		<div class="blank"></div>
		<div class="form-group">
			{{ form_row(registrationForm.firstname, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		<div class="form-group">
			{{ form_row(registrationForm.lastname, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		<div class="form-group">
			{{ form_row(registrationForm.email, {attr: {'class': 'form-control'}}) }}
		</div>
		<div class="blank-sm"></div>
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password',
			attr: {'class': 'form-control'}
        }) }}
		<div class="blank-sm"></div>
		<div class="form-check">
			{{ form_row(registrationForm.agreeTerms, {attr: {class: 'form-check-input'}}) }}
		</div>
		<div class="blank"></div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block">Register</button>
		</div>
		<div class="blank"></div>
			<div class="clearfix">
				<div class="blank-xl"></div>
				Already registered ?
				<a href="/login" class="float-right">Log in</a>
			</div>
		{{ form_end(registrationForm, {
			
		}) }}

	</div>
{% endblock %}
